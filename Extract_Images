//Recortando la imagen con un shapefile, en este caso solo el distrito de Jesús María 
function clipped(image){
  return image.clip(table);
}
//Selección de banda de control BQA para identificar pixels de nubes
function MascaraNubesL(image) {
  var qa = image.select('BQA');
// El bit4 con valor 1 identifica pixels de nubes que podemos excluir de la imagen
  var RecorteMascaraL = 1 << 4;
  var MascaraL = qa.bitwiseAnd(RecorteMascaraL).eq(0);
  return image.updateMask(MascaraL);
}
//LLamamos a la colección Landsat 8 y filtramos por fechas, extensión y coberturas de nubes para ajustar parámetros
var Landsat = ee.ImageCollection('LANDSAT/LC08/C01/T1') //Llamada a la colección Landsat 8
  .filterDate('2015-01-01', '2015-04-31') //Filtro de fechas del trabajo
  .filter(ee.Filter.lt('CLOUD_COVER',80))// Nubosidad alta para mayor resolución debido a la posición cubierta por el Landsat 8
  .map(clipped) //Recortando la imagen
  .map(MascaraNubesL); //Enmascarando las nubes
//Representamos la composición RGB a color natural RGB 321
//Obtenemos una única imagen fruto de la combinación de píxels disponibles con ausencia de nube
var rgbVis = {
  min: 4000.0,
  max: 20000.0,
  gamma: 1.2,
  bands: ['B3', 'B2', 'B1']
};
Map.addLayer(Landsat.median(), rgbVis, 'LandsatCloudless');
//Exportamos la imagen incorporando las bandas que queramos en el GeoTIF y asignamos resolución de salida
Export.image.toDrive({
  image: Landsat.median(), //Reseñar las bandas a exportar (todas o las representadas)
  description: 'JesusMaría-Summer-2015', //Nombre de archivo de salida a exportar en Google Drive
  scale: 30,}); //Resolucion de pixel de salida
